# Template file for 'smplayer-themes'
pkgname=smplayer-themes
version=18.6.0
revision=1
build_style=gnu-makefile
make_build_args="PREFIX=/usr"
make_install_args="PREFIX=/usr"
hostmakedepends="qt5-host-tools"
makedepends="optipng"
depends="smplayer"
short_desc="Themes for SMPlayer"
maintainer="Ted Hill <tedhill7@gmail.com>"
license="GPL-2"
homepage="https://smplayer.info"
distfiles="https://downloads.sourceforge.net/smplayer/${pkgname}-${version}.tar.bz2"
checksum=2d86f4497dbeb3d5602bee2e0b2ed6ebf44ea90424c0b643b2597b4df277a985

pre_build() {
    cd ${wrksrc}
    # Fix invalid PNG icons to work with libpng 1.6
    find -name '*.png' -exec optipng -quiet -force -fix {} +
}
